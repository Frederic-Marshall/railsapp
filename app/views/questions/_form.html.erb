<%= form_with model: question do |form| %>
  <div class="form-group">
    <p><%= form.label :body, 'Введите в поле содержание конспекта', class: 'form-center' %></p>
    <p><%= form.text_area :body, rows: 10, class: "form-text-area" %></p>
  </div>
  
  <div class="form-group">
    <p class='mt'><%= form.label :category_id, 'Учебная дисциплина', class: 'form-center' %></p>
    <p><%= form.collection_select :category_id, Category.order(:name), :id, :name, {include_blank: true}, class: 'form-select' %></p>
  </div>

  

  <div class="form-group">
    <p><%= form.label :file,'Файл', class: 'form-center' %></p>
    <p><%= form.file_field :file, class: 'file-field form-center' %></p>
  </div>

  <div class="form-group">
    <p><%= form.submit 'Сохранить', class: "button" %></p>
  </div>
<% end %>
