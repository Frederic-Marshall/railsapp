<div class='container'>
    <h2>Вход</h2>

    <div>
        <%= form_with scope: :session, url: session_path, data: {turbo: false} do |form| %>
            <div class='form-group'>
                <p><%= form.label :email %></p>
                <p><%= form.text_field :email, class: 'form-field' %></p>
            </div>

            <div class='form-group'>
                <p><%= form.label :password %></p>
                <p><%= form.password_field :password, class: 'form-field' %></p>
            </div>
            
            <div class='form-group'>
                <p><%= form.submit 'Вход', class: 'button' %></p>
            </div>
        <% end %> 
    </div>
</div>